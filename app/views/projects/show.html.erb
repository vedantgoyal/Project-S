<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @project.title %>
</p>

<p>
  <b>Body:</b>
  <%= @project.body %>
</p>

<p>
  <b>Target:</b>
  <%= @project.target %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<h2>Sponsors</h2>

<!--Shows sponsors under project-->
<div id="sponsors">
	<% @project.sponsors.each do |sponsor| %>
		<%=	div_for sponsor do %>	
		<p>
			<%= h(sponsor.name) %> ~
			&nbsp&nbsp Amount:
			<%= h(sponsor.amount) %>
		</p>
		<% end %>
	<% end %>
</div>
	
<%= link_to 'New Sponsor', "/projects/#{@project.id}/sponsors/new" %>




